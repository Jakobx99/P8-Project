<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mysmartdeviceactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sw801.remindersystem.ActivityView.MySmartDeviceActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Nav bar -->
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorBackground"
            app:itemIconTint="@drawable/navbar_color_change"
            app:itemTextColor="@drawable/navbar_color_change"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/navigation" />

        <TextView
            android:id="@+id/textView_mysmartdevices"
            android:layout_width="300dp"
            android:layout_height="46dp"
            android:layout_marginBottom="8dp"
            android:text="My smart devices"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/listView_mysmartdevices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navigation"
            app:layout_constraintVertical_bias="1.0" />

        <ListView
            android:id="@+id/listView_mysmartdevices"
            android:layout_width="391dp"
            android:layout_height="472dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navigation" />

        <ImageView
            android:id="@+id/imageView_mysmartdeviceadd"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toEndOf="@+id/textView_mysmartdevices"
            app:layout_constraintTop_toBottomOf="@+id/navigation"
            app:srcCompat="@drawable/ic_add_black_18dp" />

    </android.support.constraint.ConstraintLayout>

    <!--Burger menu -->
    <android.support.design.widget.NavigationView
        android:id="@+id/burgermenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:headerLayout="@layout/burgerheader"
        app:itemIconTint="@android:color/black"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/drawermenu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
