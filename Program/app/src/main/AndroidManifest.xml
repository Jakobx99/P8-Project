<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sw801.remindersystem">
	<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityView.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityView.SettingsActivity" />
        <activity android:name=".ActivityView.AddEventActivity" />
        <activity android:name=".ActivityView.EditEventActivity" />
        <activity android:name=".ActivityView.AddSmartDeviceActivity" />
        <activity android:name=".ActivityView.EditSmartDeviceActivity" />
        <activity android:name=".ActivityView.GlobalMuteSettingActivity" />
        <activity android:name=".ActivityView.LocationSettingActivity" />
        <activity android:name=".ActivityView.ShoppingSettingActivity" />

        <service
            android:name=".ViewModel.NotificationService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>